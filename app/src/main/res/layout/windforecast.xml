<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wind_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#F0E68C">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风力实况"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/wind_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wind"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/wind_orientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="东北风"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wind_visable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10km"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/wind_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3-4级"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/wind_visable"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/wind_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10kmph"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/wind_level"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_layout"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_visable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="能见度"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/text_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力等级"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/text_visable"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/text_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风速"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/text_level"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>